<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="configure.test.configurebuilds.activities.ExampleActivity"
    tools:showIn="@layout/activity_example">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/scrollText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fadeScrollbars="true"
        android:scrollbars="none">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="@string/scrollText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/ExampleActivity_scrollToRight_HorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fadeScrollbars="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/ExampleActivity_scrollToRight_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="@string/scrollText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </HorizontalScrollView>

</LinearLayout>
